        "# 7. Retriever\n",
        "# ====================================================\n",
        "def retrieve_recipes(user_input, k=5):\n",
        "    query_vec = embedding_model.encode([user_input], convert_to_numpy=True)\n",
        "    distances, ids = index.search(query_vec, k)\n",
        "    results = [records[i] for i in ids[0]]\n",
        "    return results"
