    {
      "cell_type": "code",
      "source": [
        "#Dessert Determination Function\n",
        "def is_dessert(text):\n",
        "    text = str(text).lower()\n",
        "    return any(keyword in text for keyword in dessert_keywords)"
      ],
      "metadata": {
        "id": "GNK__G-Epcs-"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "\n",
        "# extract dessert recipes\n",
        "print(\"Extracting dessert recipes...\")\n",
        "\n",
        "desserts_df = df[\n",
        "    df[\"title\"].apply(is_dessert) |\n",
        "    df[\"ingredients\"].apply(is_dessert) |\n",
        "    df[\"directions\"].apply(is_dessert)\n",
        "]\n",
        "\n",
        "print(\"Number of extracted desserts:\", len(desserts_df))"
