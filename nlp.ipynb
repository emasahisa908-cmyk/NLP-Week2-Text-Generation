      "execution_count": null,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Loaded dessert recipes: 1085463\n"
          ]
        }
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# ---------------------------\n",
        "# 5. Build RAG records\n",
        "# ---------------------------\n",
        "records = []\n",
        "for idx, row in df.iterrows():\n",
        "    full_text = f\"{row['title']}\\nIngredients: {row['ingredients']}\\nInstructions: {row['directions']}\"\n",
        "    records.append({\n",
        "        \"id\": idx,\n",
        "        \"title\": row[\"title\"],\n",
        "        \"ingredients\": row[\"ingredients\"],\n",
        "        \"instructions\": row[\"directions\"],\n",
        "        \"text\": full_text\n",
        "    })\n",
        "\n",
        "print(\"Sample record:\", records[0])"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "1CC2qrIeg_2T",
        "outputId": "06365809-ec80-4c0b-cba7-b4607ace9876"
      },
      "execution_count": null,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Sample record: {'id': 0, 'title': 'No-Bake Nut Cookies', 'ingredients': '[\"1 c. firmly packed brown sugar\", \"1/2 c. evaporated milk\", \"1/2 tsp. vanilla\", \"1/2 c. broken nuts (pecans)\", \"2 Tbsp. butter or margarine\", \"3 1/2 c. bite size shredded rice biscuits\"]', 'instructions': '[\"In a heavy 2-quart saucepan, mix brown sugar, nuts, evaporated milk and butter or margarine.\", \"Stir over medium heat until mixture bubbles all over top.\", \"Boil and stir 5 minutes more. Take off heat.\", \"Stir in vanilla and cereal; mix well.\", \"Using 2 teaspoons, drop and shape into 30 clusters on wax paper.\", \"Let stand until firm, about 30 minutes.\"]', 'text': 'No-Bake Nut Cookies\\nIngredients: [\"1 c. firmly packed brown sugar\", \"1/2 c. evaporated milk\", \"1/2 tsp. vanilla\", \"1/2 c. broken nuts (pecans)\", \"2 Tbsp. butter or margarine\", \"3 1/2 c. bite size shredded rice biscuits\"]\\nInstructions: [\"In a heavy 2-quart saucepan, mix brown sugar, nuts, evaporated milk and butter or margarine.\", \"Stir over medium heat until mixture bubbles all over top.\", \"Boil and stir 5 minutes more. Take off heat.\", \"Stir in vanilla and cereal; mix well.\", \"Using 2 teaspoons, drop and shape into 30 clusters on wax paper.\", \"Let stand until firm, about 30 minutes.\"]'}\n"
          ]
        }
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "\n",
        "# ---------------------------\n",
        "# 6. Embedding + FAISS index\n",
        "# ---------------------------\n",
        "embedding_model = SentenceTransformer(\"all-MiniLM-L6-v2\")\n",
        "\n",
        "recipe_texts = [r[\"text\"] for r in records]\n",
        "recipe_embeddings = embedding_model.encode(recipe_texts, convert_to_numpy=True)\n",
        "\n",
        "print(\"Embeddings:\", recipe_embeddings.shape)\n",
        "\n",
        "dimension = recipe_embeddings.shape[1]\n",
        "index = faiss.IndexFlatL2(dimension)\n",
        "index.add(recipe_embeddings)\n",
        "\n",
        "print(\"FAISS index size:\", index.ntotal)"
      ],
