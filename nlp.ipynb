      "cell_type": "code",
      "source": [
        "#load library\n",
        "import pandas as pd\n",
        "import numpy as np\n",
        "from sentence_transformers import SentenceTransformer\n",
        "import json\n",
        "import faiss"
      ],
      "metadata": {
        "id": "ukVAQwz5leEa"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# load dessert only CVS\n",
        "df = pd.read_csv(\"/content/drive/MyDrive/recipeNLG/desserts_only.csv\")\n",
        "\n",
        "print(\"Loaded dessert recipes:\", len(df))"
      ],
      "metadata": {
        "id": "Btarnc2Bli8J",
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "outputId": "3660e985-2e95-4a4c-e2b3-578e1de7aab0"
